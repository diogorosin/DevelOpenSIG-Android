<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@drawable/activity_map_bottom_sheet_selected"  >

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/activity_map_bottom_sheet_edification_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/colorBlackDark"
            android:background="@drawable/icon_other_60"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingStart="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="@string/other"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:baselineAligned="false"
                android:textSize="12sp"
                android:textColor="@color/colorBlackDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_map_bottom_sheet_edification_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlackDark"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>