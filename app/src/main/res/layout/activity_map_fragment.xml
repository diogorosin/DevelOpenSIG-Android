<fragment
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_fragment"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MapActivity">

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/activity_map_fsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:floatingSearch_searchBarMarginLeft="5dp"
        app:floatingSearch_searchBarMarginTop="28dp"
        app:floatingSearch_searchBarMarginRight="5dp"
        app:floatingSearch_searchHint="@string/search_hint"
        app:floatingSearch_suggestionsListAnimDuration="250"
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_leftActionMode="showHamburger"
        app:floatingSearch_menu="@menu/menu_map_search"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_map_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/icon_add_24"
        app:backgroundTint="@color/colorGreyDark"
        android:layout_margin="20dp"/>

</fragment>