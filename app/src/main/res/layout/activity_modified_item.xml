<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="14dp">

    <ImageView
        android:id="@+id/activity_modified_item_photo_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_marker_24"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.6"
        android:paddingEnd="7dp"
        android:paddingStart="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_modified_item_address_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/activity_modified_item_modified_at_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>