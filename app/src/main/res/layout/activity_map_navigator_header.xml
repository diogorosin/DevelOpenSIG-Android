<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/activity_map_navigator_header_background"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/activity_map_navigator_header_photo"
        android:src="@drawable/activity_map_navigator_header_photo"
        android:layout_width="73dp"
        android:layout_height="55dp"
        android:elevation="1dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.21" />

    <TextView
        android:id="@+id/activity_map_navigator_header_name"
        android:textColor="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:paddingStart="10dp"/>

    <TextView
        android:id="@+id/activity_map_navigator_header_government"
        android:textColor="@android:color/background_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:paddingStart="10dp"
        android:textSize="12sp" />

</LinearLayout>